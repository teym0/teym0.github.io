---
import BaseLayout from './BaseLayout.astro';
import TagButton from '../components/TagButton.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>


    <div class="text-center my-15">
      <h1 class="text-5xl pb-3">{frontmatter.icon}</h1>
      <h1 class="text-4xl font-bold mx-5">{frontmatter.title}</h1>
      <p class="mt-3 post-date">{frontmatter.pubDate.toString().slice(0,10)}</p>
    </div>

    <div class="p-5 font-bold underline">
      <a href="/blog/" class="hover:text-gray-950">記事一覧に戻る</a>
    </div>
    <div class="bg-white p-8 prose prose-lg lg:prose-lg 
      prose-headings:font-bold prose-headings:tracking-tight
      prose-h1:text-3xl prose-h1:mt-12 prose-h1:mb-6 prose-h1:pb-4 prose-h1:border-b-6 prose-h1:border-gray-200 prose-h1:leading-tight prose-h1:text-gray-900
      prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-5 prose-h2:pb-3 prose-h2:border-b-4 prose-h2:border-gray-200 prose-h2:leading-tight prose-h2:text-gray-800
      prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4 prose-h3:font-semibold prose-h3:text-gray-700 prose-h3:leading-snug prose-h3:before:content-['■'] prose-h3:before:mr-2 prose-h3:before:text-amber-400
      prose-p:text-gray-700 prose-p:leading-relaxed
      prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
      prose-strong:text-gray-900
      prose-ul:my-6 prose-li:my-2
      prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:p-4 prose-pre:rounded-lg
      prose-blockquote:border-l-4 prose-blockquote:border-gray-300 prose-blockquote:pl-4 prose-blockquote:italic
      prose-img:rounded-lg prose-img:shadow-md">
      <div class="not-prose">
        {frontmatter.tags.map((tag: string) => (
          <TagButton tag={tag} />
        ))}
      </div>

      <slot />
    </div>
</BaseLayout>
